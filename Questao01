/*1. Faça um programa que receba o valor dos créditos galácticos de um Star trooper e
o percentual de aumento, calcule e mostre os créditos galácticos com o novo
aumento.*/
package com.mycompany.questao01;
import java.util.Scanner;

public class Questao01 {
    public static void main(String[] args) {
        Scanner leitor = new Scanner(System.in);
        System.out.print("Digite o valor do crédito: ");
        float valor_c = leitor.nextFloat();
        System.out.print("Digite o valor da porcentagem de reajuste: ");
        float porcentagem = leitor.nextFloat();

        float resultado = valor_c * porcentagem / 100;
        float r_final = resultado + valor_c;
        System.out.println("O novo valor é de "+r_final+" reais.");

    }
}
